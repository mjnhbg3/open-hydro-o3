{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LED Control Command",
  "type": "object",
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "led_power": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "LED power as percentage"
    },
    "schedule": {
      "type": "object",
      "properties": {
        "hours_on": {
          "type": "number",
          "minimum": 8,
          "maximum": 18,
          "description": "Daily light hours"
        },
        "start_time": {
          "type": "string",
          "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$",
          "description": "Start time in HH:MM format"
        }
      },
      "required": ["hours_on", "start_time"]
    },
    "reason": {
      "type": "string",
      "maxLength": 200,
      "description": "Explanation for LED adjustment"
    }
  },
  "required": ["timestamp", "led_power", "reason"]
}