{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Actuator Dosing Command",
  "type": "object",
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "pump_a": {
      "type": "object",
      "properties": {
        "ml": {"type": "number", "minimum": 0, "maximum": 50},
        "reason": {"type": "string", "maxLength": 200}
      },
      "required": ["ml", "reason"]
    },
    "pump_b": {
      "type": "object", 
      "properties": {
        "ml": {"type": "number", "minimum": 0, "maximum": 50},
        "reason": {"type": "string", "maxLength": 200}
      },
      "required": ["ml", "reason"]
    },
    "ph_pump": {
      "type": "object",
      "properties": {
        "ml": {"type": "number", "minimum": 0, "maximum": 20},
        "reason": {"type": "string", "maxLength": 200}
      },
      "required": ["ml", "reason"]
    },
    "refill": {
      "type": "object",
      "properties": {
        "ml": {"type": "number", "minimum": 0, "maximum": 1000},
        "reason": {"type": "string", "maxLength": 200}
      },
      "required": ["ml", "reason"]
    }
  },
  "required": ["timestamp"]
}