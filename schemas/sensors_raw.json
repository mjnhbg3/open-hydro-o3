{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Raw Sensor Data",
  "type": "object",
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "water": {
      "type": "object",
      "properties": {
        "ph": {"type": "number", "minimum": 0, "maximum": 14},
        "ec": {"type": "number", "minimum": 0, "maximum": 5},
        "turbidity": {"type": "number", "minimum": 0},
        "temperature": {"type": "number", "minimum": -10, "maximum": 50},
        "level_high": {"type": "boolean"},
        "level_low": {"type": "boolean"}
      },
      "required": ["ph", "ec", "turbidity", "temperature", "level_high", "level_low"]
    },
    "air": {
      "type": "object",
      "properties": {
        "temperature": {"type": "number", "minimum": -40, "maximum": 80},
        "humidity": {"type": "number", "minimum": 0, "maximum": 100},
        "pressure": {"type": "number", "minimum": 300, "maximum": 1100},
        "co2": {"type": "number", "minimum": 0, "maximum": 10000}
      },
      "required": ["temperature", "humidity", "pressure", "co2"]
    },
    "root": {
      "type": "object",
      "properties": {
        "temperature": {"type": "number", "minimum": -10, "maximum": 50}
      },
      "required": ["temperature"]
    },
    "light": {
      "type": "object",
      "properties": {
        "lux": {"type": "number", "minimum": 0, "maximum": 100000},
        "led_power": {"type": "number", "minimum": 0, "maximum": 100}
      },
      "required": ["lux", "led_power"]
    }
  },
  "required": ["timestamp", "water", "air", "root", "light"]
}