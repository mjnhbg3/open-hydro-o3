{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Heater Control Command",
  "type": "object",
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "target_temp": {
      "type": "number",
      "minimum": 15,
      "maximum": 30,
      "description": "Target temperature in Celsius"
    },
    "hysteresis": {
      "type": "number",
      "minimum": 0.5,
      "maximum": 3.0,
      "default": 1.0,
      "description": "Temperature hysteresis band"
    },
    "max_duty_cycle": {
      "type": "number",
      "minimum": 10,
      "maximum": 100,
      "default": 80,
      "description": "Maximum heater duty cycle percentage"
    },
    "reason": {
      "type": "string",
      "maxLength": 200,
      "description": "Explanation for heater adjustment"
    }
  },
  "required": ["timestamp", "target_temp", "reason"]
}