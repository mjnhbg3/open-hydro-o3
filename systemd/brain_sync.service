[Unit]
Description=Hydroponic Daily Brain Sync Service
After=network.target

[Service]
Type=oneshot
User={{USER}}
Group={{USER}}
WorkingDirectory={{PROJECT_DIR}}
Environment=PYTHONPATH={{PROJECT_DIR}}
ExecStart={{PYTHON_PATH}} {{PROJECT_DIR}}/scripts/daily_brain_sync.py
StandardOutput=journal
StandardError=journal
SyslogIdentifier=hydro-brain-sync

# Resource limits
MemoryMax=1G
CPUQuota=100%
TimeoutStartSec=1800

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths={{PROJECT_DIR}} /home/{{USER}}/hydro /var/log/hydro

# Environment file for OpenAI API key
EnvironmentFile=-{{PROJECT_DIR}}/.env