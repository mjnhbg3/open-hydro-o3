# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=o3

# Database
DATABASE_URL=sqlite:///~/hydro/db/hydro.db

# Chroma Vector Store
CHROMA_PATH=~/hydro/chroma/

# Logging
LOG_LEVEL=INFO
LOG_PATH=~/hydro/logs/

# MQTT (optional)
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Hardware Configuration
I2C_BUS=1
UART_DEVICE=/dev/ttyAMA0

# Development
DEBUG=false
MOCK_HARDWARE=false